---
const { title, description, slug, pubDate, tags } = Astro.props;
const formattedDate = pubDate ? new Date(pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) : null;
---

<a href={`/blog/${slug}`} class="card">
    <div class="card-inner">
        {formattedDate && <time>{formattedDate}</time>}
        <h2>{title}</h2>
        {description && <p>{description}</p>}
        {tags?.length > 0 && (
            <div class="tags">
                {tags.map((tag: string) => <span class="tag">{tag}</span>)}
            </div>
        )}
        <span class="read-more">Read article</span>
    </div>
</a>